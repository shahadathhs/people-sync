model RefreshToken {
  id String @id @default(uuid())

  token String @unique // hashed

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("refresh_tokens")
}
